<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">
		Edit <%= camp.name %>
	    </h1>
		<div style="width:30%; margin: 25px auto;">
			<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
				<div class="form-group">
				 	<input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">	
				</div>
				<div class="form-group">
				 	<input class="form-control" type="Number" name="camp[price]" value="<%= camp.price %>" min="0.01" step="0.01">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[img]" value="<%= camp.img %>" >	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[description]" value="<%= camp.description %>" >	
				</div>
				<div>
					<button class="btn btn-lg btn-primary btn-block">
					SUBMIT!
				    </button>	
				</div>	
			</form>
		    <a href = "/campgrounds" style="margin: 25px auto;">Go Back!</a>	
		</div>
	</div>
	
</div>

<%- include("../partials/footer") %>