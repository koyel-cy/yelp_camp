<%- include("partials/header") %>

<div class ="container">
	<header class="jumbotron">
		<div class="container">
		<h1>
	    WELCOME TO YELP CAMP!
        </h1>
		<p>
			Get ready to find some awesome campgrounds from all over the world!!
		</p>
		<p>
			<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campground!</a>
			
		</p>
			
		</div>
	
    </header>
	<div class="row">
		<div class ="col-lg-12">	
			<h3>
				popular campus backgrounds!
			</h3>
	    </div>
		
	</div>
	



<div class = "row" style ="display:flex; flex-wrap:wrap;">	
	<% campgrounds.forEach(function(campground){ %>
		
    <div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				 <img src = "<%= campground.img %>">
            
		    <div class="caption text-center">
			   <%= campground.name %>
            </div>
			</div>
    </div>


	
	
<% }); %>
</div>
</div>

